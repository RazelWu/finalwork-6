@model List<WebApplication1.Models.Album>
@{
    ViewBag.Title = "日誌";
    Layout = "/Views/Shared/Layout.cshtml";
}
    <div class="container">
        <div class="text-center">
            <a href="~/Album/Create" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-pencil"></span> 新增日誌
            </a>

        </div>
        <div class="row container">
            <div class="col-md-12">
                @for (var i = 0; i < Model.Count; i++)
                {
                    <div class="col-sm-3">
                        <div class="thumbnail">
                            <p>@Model[i].Title</p>
                            <p>@Model[i].Genre</p>
                            <button class="btn" data-toggle="modal" data-target="#@Model[i].ID">查看</button>
                            <!-- Modal -->
                            <div class="modal fade" id="@Model[i].ID" tabindex="-1" role="dialog" aria-labelledby="@Model[i].ID" style="color:black">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="@Model[i].ID">@Model[i].Title</h4>
                                        </div>
                                        <div class="modal-body text-center">
                                            @Model[i].Price
                                        </div>
                                        <div class="modal-body text-center">
                                            <img src="@Model[i].ImageUrl" alt="無上傳" height="300" width="300">
                                        </div>
                                        <div class="modal-fixed-footer">
                                            <a class="btn btn-primary" href="~/Album/Update/@Model[i].ID">Update</a>
                                            <a class="btn btn-danger" href="~/Album/Delete/@Model[i].ID">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


        </div>
    </div>

